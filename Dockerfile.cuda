# CUDA-enabled Dockerfile for Linux hosts with NVIDIA GPU
FROM nvidia/cuda:12.1.1-cudnn8-runtime-ubuntu22.04

ENV DEBIAN_FRONTEND=noninteractive \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    PORT=7860 \
    OLLAMA_URL=http://host.docker.internal:11434

# System deps
RUN apt-get update && apt-get install -y --no-install-recommends \
    python3 python3-venv python3-pip git build-essential curl \
    && rm -rf /var/lib/apt/lists/*

# Make python3 default
RUN ln -sf /usr/bin/python3 /usr/bin/python && \
    python -m pip install --upgrade pip

WORKDIR /workspace

# Install CUDA PyTorch first to ensure correct wheels
RUN pip install --index-url https://download.pytorch.org/whl/cu121 torch torchvision torchaudio

COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir "bitsandbytes>=0.43,<1"

COPY app ./app
COPY README.md .

EXPOSE 7860

CMD ["python", "-m", "app.main"]
