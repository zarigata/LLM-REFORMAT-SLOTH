# ROCm-enabled Dockerfile for Linux hosts with AMD GPU
# Note: Requires ROCm-enabled host and Docker with access to /dev/kfd and /dev/dri.
FROM pytorch/pytorch:2.4.0-rocm6.0

ENV DEBIAN_FRONTEND=noninteractive \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    PORT=7860 \
    OLLAMA_URL=http://host.docker.internal:11434

# System deps
RUN apt-get update && apt-get install -y --no-install-recommends \
    git build-essential curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /workspace

# PyTorch ROCm already included in base image
COPY requirements.txt ./
RUN python -m pip install --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

COPY app ./app
COPY README.md .

EXPOSE 7860

CMD ["python", "-m", "app.main"]
